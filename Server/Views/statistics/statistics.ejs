  <%- include('../partials/header.ejs'); %>

  <!-- MAIN CONTENT -->
  <div class="container" id="tables">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h3><%= title %></h3>
          <form class="form" method="post">
            <div class="form-group">    
                <label for="NameTextField">Survey Name: </label>
                <label for="SurveyNameLable"><%= surveys.Name %></label> <br/>
              <label for="NameTextField">Number of Responses: </label>
              <label for="SurveyNameLable"><%= responses.length %></label>                
            </div>              
            <br/>
            <div class="row justify-content-center">
                <div class="table-responsive">
                  <table class="table table-striped">
                  <!-- <table class="table table-bordered table-striped table-hover"> -->
                    <thead>
                      <tr>                     
                        <th class="text-center">No.</th>
                        <th class="text-center"><%= questions[0].question[0]%></th>
                        <th class="text-center"><%= questions[0].question[1]%></th>
                        <th class="text-center"><%= questions[0].question[2]%></th>                  
                        <th class="text-center"><%= questions[0].question[3]%></th>
                        <th class="text-center"><%= questions[0].question[4]%></th>
                         
                      </tr>
                      </thead>
                      <tbody>
                      <!-- Template Row -->
                      <% for (let count = 0; count < responses.length; count++) { %>
                      <tr>
                        <td scope="row" class="text-center"> <%= count + 1 %></td>
                                     
      
                        <td class="text-center"><%= responses[count].response[0] %></td>
                        <td class="text-center"><%= responses[count].response[1]  %></td>
                        <td class="text-center"><%= responses[count].response[2]  %></td> 
                        <td class="text-center"><%= responses[count].response[3]  %></td> 
                        <td class="text-center"><%= responses[count].response[4]  %></td> 
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div> 
 
            <br/>

            <button type="submit" class="btn btn-primary btnExport"><i class="fa-solid fa-file-export"></i> Export</button>            
            <a href="/surveys" class="btn btn-warning"><i class="fa fa-undo"></i> Back</a>            
          </form>
      </div>
    </div>
  </div>    

